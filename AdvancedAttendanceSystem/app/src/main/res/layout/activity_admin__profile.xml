<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_admin__profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#003"
    android:padding="10dp"
    tools:context="com.example.aas.advancedattendancesystem.Admin_Profile">

    <RelativeLayout
        android:id="@+id/relative_withinrelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/arrow_backward"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="@string/less_than"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_alignParentLeft="true"
            android:background="@android:drawable/screen_background_dark_transparent"
            />


        <Button
            android:id="@+id/arrow_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show records"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/screen_background_dark_transparent"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/relative_withinrelative"
        android:background="@drawable/row_bg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dbname"
            android:padding="20dp"
            android:hint="Class Name eg. CSE7A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_gravity="center"
            />



        <EditText
            android:id="@+id/roll"
            android:padding="20dp"
            android:hint="Roll Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_gravity="center"/>



        <EditText
            android:id="@+id/name"
            android:padding="20dp"
            android:hint="Fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_add_record"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Add"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:background="@drawable/redcircle_trans"
            style="@style/AudioFileInfoOverlayText"
            />

    </LinearLayout>


</RelativeLayout>
